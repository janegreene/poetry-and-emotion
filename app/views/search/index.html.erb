<% @poems.take(10).each do |poem| %>
  <section class="poem">
    <h3 class="title"><%= poem.title %></h3>
    <div class="author"><%= poem.author %></div>
    <div class="lines"><%= poem.text %></div>
    <ul class="tones">
      <% poem.tones.each do |tone|%>
      <li><%= tone.name %></li>
      <% end %>
    </ul>
  </section>
<%end %>
